# --- Server ---
PORT=8080

# --- CORS ---
# Orígenes permitidos (separa múltiples con coma si hace falta)
APP_CORS_ORIGINS=http://localhost:3560

# --- Base de Datos (MySQL) ---
BD_URL=jdbc:mysql://localhost:3306/fitapp?useSSL=false&serverTimezone=UTC
BD_USER=fitapp_user
BD_PASSWORD=fitapp_pwd

# --- JWT (Auth0 java-jwt con HS256) ---
# Clave secreta para firmar tokens. NO uses este valor en real.
PRIVATE_KEY=CAMBIA_ESTA_CLAVE_LARGA_MUY_ALEATORIA
# “Issuer” (quién emite el token).
USER_GENERATOR=fitapp_api
# TTL del access token en segundos
JWT_TTL=1800